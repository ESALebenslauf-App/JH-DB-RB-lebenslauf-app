<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayoutNavOben"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/naviObenBild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/titelPicPersonalien"
            android:background="#1DACE9"
            android:text="@string/naviObenBild"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/naviObenBerufserfahrung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titelPicPersonalien"
            android:layout_weight="0.92"
            android:background="#1DACE9"
            android:text="@string/naviObenBerufserfahrung"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/naviObenBildung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titelPicPersonalien"
            android:layout_toRightOf="@+id/naviObenBerufserfahrung"
            android:background="#1DAC01"
            android:text="@string/naviObenBildung"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/naviObenSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titelPicPersonalien"
            android:layout_alignLeft="@+id/picAuswahl"
            android:layout_toLeftOf="@+id/naviObenFinish"
            android:background="#1DAC01"
            android:text="@string/naviObenSkills"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/naviObenZusammenfassung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/titelPicPersonalien"
            android:layout_toRightOf="@+id/naviObenBildung"
            android:background="#1DAC01"
            android:text="@string/naviObenZusammenfassung"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/naviObenFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1DAC01"
            android:text="@string/naviObenFinish"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayoutNavOben"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/imageViewIconBerufserfahrung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_beruf" />

        <TextView
            android:id="@+id/textViewFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="@string/txt_berufserfahrung"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <!-- Hauptteil Titel -->

    <LinearLayout
        android:id="@+id/linearLayoutTitel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#1DACE9"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ico_back" />

        <Button
            android:id="@+id/buttonBild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1DACE9"
            android:contentDescription="@string/todo"
            android:text="@string/naviUntenBild"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonBildungActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1DACE9"
            android:contentDescription="@string/todo"
            android:paddingLeft="140dp"
            android:text="@string/naviUntenBildung"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ico_vor" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayoutNavOben"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tableRow_txt_firma"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txt_firma_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_firma" />

            <EditText
                android:id="@+id/txt_firma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_txt_titel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_titel_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_titel" />

            <EditText
                android:id="@+id/txt_titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_txt_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_adresse_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_adresse" />

            <EditText
                android:id="@+id/txt_adresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_txt_plz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_plz_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_plz" />

            <EditText
                android:id="@+id/txt_plz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_txt_ort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_ort_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_ort" />

            <EditText
                android:id="@+id/txt_ort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <!-- Column 1 -->

            <TextView
                android:id="@+id/txt_dauer_von_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:padding="10dip"
                android:text="@string/txt_von" />

            <!-- Column 2 -->

            <Button
                android:id="@+id/btnSelectDateVon"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="2"
                android:padding="10dip" />

            <!-- Column 3 -->

            <TextView
                android:id="@+id/txt_dauer_bis_label"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="1"
                android:padding="10dip"
                android:text="@string/txt_bis" />
            <!-- Column 4 -->

            <Button
                android:id="@+id/btnSelectDateBis"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:layout_weight="2"
                android:padding="10dip" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow_txt_taetigkeit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_taetigkeit_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_taetigkeit" />

            <EditText
                android:id="@+id/txt_taetigkeit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:id="@+id/berufserfahrung_beschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_add_beschreibung_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/btn_berufserfahrung_beschreibung"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_berufserfahrung_beschreibung" />
        </TableRow>

        <TableRow
            android:id="@+id/add_berufserfahrung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_add_berufserfahrung_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

            <Button
                android:id="@+id/sf_add_berufserfahrung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txt_berufserfahrung_add" />
        </TableRow>
    </TableLayout>

</RelativeLayout>